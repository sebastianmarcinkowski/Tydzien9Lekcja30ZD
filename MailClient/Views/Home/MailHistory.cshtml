@model IEnumerable<MailClient.Models.Domains.MailEntity>

<h2>@ViewBag.Title</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped mt-3 mb-5">
        <thead>
            <tr>
                <th scope="col">Nadawca</th>
                <th scope="col">Odbiorca / Odbiorcy</th>
                <th scope="col">Tytuł</th>
                <th scope="col">Nazwa załącznika</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var mail in Model)
            {
            <tr>
                <td>@mail.SenderName</td>
                <td>@mail.To</td>
                <td>@mail.Title</td>
                <td>@mail.AttachmentName</td>
                
                <td>
                    <a class="font-weight-bold"
                       href="@Url.Action( "MailPreview", "Home",
                                 new { mailId = mail.MailId })">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>

            </tr>
            }

        </tbody>
    </table>
}
else
{
    <div>
        Brak klientów do wyświetlenia.
    </div>
}
