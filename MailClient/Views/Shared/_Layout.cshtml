<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MailClient</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">

        <div class="container">

            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active">
                        @Html.ActionLink("Strona główna", "Index", "Home", null, new { @class = "nav-link" })
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            @Html.ActionLink("Historia", "MailHistory", "Home", null, new { @class = "nav-link" })
                        </li>
                    }

                </ul>

                @Html.Partial("_LoginPartial")

            </div>
        </div>

    </nav>

    <div class="container body-content">

        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - MailClient</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <div class="privacyPolicyInfo" style="display: none;">
        Serwis wykorzystuje pliki cookies, korzystając ze strony wyrażasz zgodę na wykorzystanie plików cookies.
        <button onclick="closePrivacyPolicy()"
                type="button"
                class="btn btn-light btn-sm mx-3 my-1 privacyPolicyButton">
            Ok, rozumiem
        </button>
    </div>

    <script>

        function closePrivacyPolicy() {

            $('.privacyPolicyInfo').css("display", "none");

            $.cookie("privacyPolicy", "1", { path: '/', expires: 365 });

        }

        $(document).ready(function () {

            if ($.cookie("privacyPolicy") != "1")
                $('.privacyPolicyInfo').css("display", "");

        });

    </script>

    @RenderSection("scripts", required: false)

</body>
</html>
